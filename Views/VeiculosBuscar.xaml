<Page x:Class="WpfPessoaMVVM.Views.VeiculosBuscar"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPessoaMVVM.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="VeiculosBuscar">

    <Grid>
        <StackPanel Margin="10">
            <StackPanel Margin="40,0,40,30">
                <Label Content="Marca ou Modelo" />
                <TextBox x:Name="txtMarca" Text="{Binding Path=Marca}" Height="20" />

                <StackPanel Margin="40,0,40,30">
                    <DataGrid x:Name="drgVeiculos" 
                              HorizontalAlignment="Center" 
                              ItemsSource="{Binding Veiculos}" 
                              AutoGenerateColumns="False"
                              IsReadOnly="True">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70*">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>

                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            
                            <DataGridTextColumn Header="Nome /Marca" Binding="{Binding Nome}" Width="150*" />
                            <DataGridTextColumn Header="Modelo" Binding="{Binding Modelo}" Width="90*" />

                            <DataGridTextColumn Header="Ano" Binding="{Binding Ano}" Width="70*">
                                <DataGridTextColumn.HeaderStyle>
                                    <Style TargetType="DataGridColumnHeader">
                                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.HeaderStyle>

                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
                
                <Button Content="Buscar" 
                        Command="{Binding BuscarVeiculos}" 
                        Margin="0,10,0,0"
                        Width="60"
                        Height="30"
                        RenderTransformOrigin="0.6,5.546"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
